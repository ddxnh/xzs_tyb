.banner {
  margin-top: 30rpx;
}

.banner swiper {
  height: 460rpx;
}

.banner swiper swiper-item {
  width: 460rpx;
}

.banner swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scollNav {
  margin: 30rpx;
}

.scollNav scroll-view {
  white-space: nowrap;
}

.scollNav scroll-view .item {
  display: inline-block;
  padding: 0 25rpx;
  text-align: center;
}

.scollNav scroll-view .item .pic {
  width: 105rpx;
  height: 105rpx;
}

.scollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.scollNav scroll-view .item .text {
  font-size: 32rpx;
  color: var(--themeColor);
}

.scollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scollNav scroll-view .item:last-child {
  padding-right: 0;
}

.about {
  padding: 50rpx 30rpx;
  background: url("https://mp-e5816101-b1b8-44a6-8452-e83fda082228.cdn.bspapp.com/list1-img1.jpg");
}

.about .container .row {
  text-indent: 2em;
  line-height: 1.6em;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-bottom: 1px dashed var(--themeColor);
  color: var(--focusColor);
}

.about .container .row:first-child {
  padding-top: 0;
}

.about .container .row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.news {
  padding: 50rpx 30rpx;
}
